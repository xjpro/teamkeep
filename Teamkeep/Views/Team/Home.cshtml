@model TeamKeep.Models.ViewModels.TeamViewModel
@{
    ViewBag.App = "teamkeep";
    ViewBag.Title = @Model.Team.Name;
    Layout = "~/Views/Shared/Master.cshtml";
}

<div ng-controller="HeaderController">
            
    <div data-spy="affix" data-offset-top="0" teamkeep-sidebar="sidebarActive">
        <ul class="nav nav-stacked nav-stacked-lg">
            <li><a ng-click="goto('schedule')">Schedule</a></li>
            <li><a ng-click="goto('roster')">Roster</a></li>
            <li><a ng-click="goto('availability')">Availability</a></li>
            <li><a ng-click="goto('messages')">Messaging</a></li>
            <li><a ng-click="goto('settings')">Settings</a></li>
        </ul>
        <hr />
        <ul class="nav nav-stacked">
            <li><a href="{{team.Url}}" ng-repeat="team in teams">{{team.Name}}</a></li>
        </ul>
        <hr />
        <ul class="nav nav-stacked">
            <li><a ng-click="logout()">Logout</a></li>
        </ul>
    </div>
            
    <div class="container hidden-xs">
        <div class="row banner" ng-style="{'background-image': 'url(' + bannerImage + ')'}">
            <h1>{{name()}}</h1>
        </div>
    </div>

</div>
<div ng-view></div>

<script>
var viewData = @Html.Raw(Json.Encode(Model));
</script>