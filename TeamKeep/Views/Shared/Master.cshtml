<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title | Team Keep</title>
        @Html.Partial("Includes")
    </head>
    <body>
        <script>
            var viewData = @Html.Raw(Json.Encode(Model));
        </script>
        
        <div id="header">
            @Html.Partial("Header")    
        </div>
        <div class="container-fluid">  
            @RenderBody()   
            <footer id="footer">
                @Html.Partial("Footer")
            </footer>
        </div>
        
        <div id="message-modal" class="modal hide fade">
            <div class="alert alert-error">
                <span>Error</span>
            </div>
        </div>
        <script>
            window.ShowAlert = function(message) {
                $("#message-modal .alert-error span").html(message);
                $("#message-modal").modal({ backdrop: false }).modal("show");
                setTimeout(function () { $("#message-modal").modal("hide"); }, 3000);
            };
        </script>
        
    </body>
</html>