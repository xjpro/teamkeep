<div id="front-header" class="container nophonepad">
    <div class="row">
        <div class="span6">
            <a href="/">
                <img src="/img/logo.png" alt="Teamkeep" />
            </a>
        </div>
        <div class="span6">
            <ul class="nav nav-pills pull-right">
                <li><a href="/">Home</a></li>
                <li><a href="/features">Features</a></li>
                <li><a href="/about">About</a></li>
                <li class="hidden-phone"><a href="http://teamkeep.tumblr.com">Blog</a></li>
                <li>
                    <button id="register-button" class="btn btn-info" data-toggle="modal" data-target="#register-modal">Create an account</button>    
                </li>
            </ul>
        </div>
    
        <form id="register-modal" class="modal hide fade" data-bind="submit: RegisterUser">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3>Create an account</h3>
            </div>
            <div class="modal-body">
            
                <div class="alert alert-error hide">
                    <span></span>
                </div>
                <div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                        <input type="text" tabindex="1" placeholder="Username" data-bind="value: RegisterUsername"/>
                    </div>
                </div>
                <div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-envelope"></i></span>
                        <input type="email" tabindex="1" placeholder="Email" data-bind="value: RegisterEmail"/>
                    </div>
                </div>
                <div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-key"></i></span>
                        <input type="password" tabindex="1" placeholder="Password" data-bind="value: RegisterPassword"/>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="pull-left hidden-phone">
                    <span>Or use: </span>
                    <button type="button" class="btn fb-login" tabindex="2"><i class="icon-facebook-sign"></i> Facebook</button>
                    <a class="btn" href="/login/openid/google" tabindex="2"><i class="icon-google-plus-sign"></i> Google</a>
                </div>

                <button class="btn" type="button" tabindex="3" data-dismiss="modal" aria-hidden="true">Cancel</button>
                <button class="btn btn-success" tabindex="1">
                    <i class="icon-spinner icon-spin"></i> Sign up now
                </button>
            </div>
        </form>
    </div>
</div>
<script>
    
    var HeaderViewModel = function () {
        var me = this;

        this.RegisterUsername = ko.observable("");
        this.RegisterEmail = ko.observable("");
        this.RegisterPassword = ko.observable("");

        this.RegisterUser = function () {

            me.RegisterUsername(me.RegisterUsername().trim());
            me.RegisterEmail(me.RegisterEmail().trim());

            if (me.RegisterUsername().length < 3) {
                $("#register-modal .alert span").html("Username must be at least three characters in length").parent().show();
                return;
            }
            
            if (me.RegisterEmail().length < 6) {
                $("#register-modal .alert span").html("Please enter a valid email address").parent().show();
                return;
            }

            if (me.RegisterPassword().length < 2) {
                $("#register-modal .alert span").html("Password must be at least two characters in length").parent().show();
                return;
            }

            $("#register-modal button").prop("disabled", true);
            $("#register-modal .icon-spin").show();

            $.ajax({
                type: "POST", url: "/users",
                data: { Username: me.RegisterUsername(), Email: me.RegisterEmail(), Password: me.RegisterPassword() },
                success: function (response) {
                    TeamKeep.signIn(response.AuthToken, response.Redirect);
                },
                error: function (response) {
                    $("#register-modal .alert span").html(JSON.parse(response.responseText)).parent().show();
                    $("#register-modal button").prop("disabled", false);
                    $("#register-modal .icon-spin").hide();
                }
            });
        };
    };

    $(function () {
        window.headerViewModel = new HeaderViewModel();
        ko.applyBindings(window.headerViewModel, document.getElementById("front-header"));
        if (new RegExp("register=true").test(location.search)) {
            $("#register-button").click();
        }
    });
</script>